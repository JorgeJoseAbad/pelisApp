div(class="container" ng-controller="PeliculaCtrl" ng-model="nombreView2")
  div(class="row")
    div(class="col-md-12")
      h1 {{miPelicula.Title}}
    div(class="row")
      div(class="col-md-4")
        img(ng-src="{{miPelicula.Poster}}" alt="{{miPelicula.Title}}")
      div(class="col-md-4")
        h2 Año: {{miPelicula.Year}}
        h2 Typo: {{miPelicula.Type}}
      div(class="col-md-4")
        button(type="button" name="button" ng-click="ponerFavoritos()") Añadir a favoritas
      
